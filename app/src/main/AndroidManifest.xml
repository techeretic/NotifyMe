<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="shetye.prathamesh.notifyme" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".NotifyMe"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".RecieveAndNotify"
            android:enabled="true"
            android:exported="true" >
        </receiver>

        <activity
            android:name=".NotificationDetail"
            android:label="@string/title_activity_notification_detail"
            android:parentActivityName=".NotifyMe" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="shetye.prathamesh.notifyme.NotifyMe" />
        </activity>
    </application>

</manifest>
